{
  "env": {
    "commonjs": true,
    "es6": true,
    "node": true,
    "mocha": true
  },
  "extends": "airbnb-base",
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly",
    "__TEST__": true
  },
  "parserOptions": {
    "ecmaVersion": 2018
  },
  "rules": {
    "no-underscore-dangle": "off",
    "prefer-destructuring": "off",
    "no-console": "off",
    "arrow-parens": "off",
    "wrap-iife": "off",
    "no-plusplus": "off",
    "no-await-in-loop": "off",
    "global-require": "off",
    "dot-notation": "off",
    "arrow-body-style": "off"
  }
}