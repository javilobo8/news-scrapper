{
  "name": "poc-news-bot",
  "description": "POC of a bot for scraping webs",
  "version": "1.0.0",
  "main": "src/index.js",
  "license": "MIT",
  "scripts": {
    "start": "node bin/www",
    "test": "jest --detectOpenHandles --forceExit",
    "lint": "eslint src"
  },
  "dependencies": {
    "axios": "^0.18.0",
    "bluebird": "^3.5.3",
    "boom": "^7.2.2",
    "chalk": "^2.4.1",
    "cheerio": "^1.0.0-rc.2",
    "express": "^4.16.4",
    "lodash": "^4.17.11",
    "mongoose": "^5.3.13",
    "node-schedule": "^1.3.0",
    "puppeteer": "^1.10.0",
    "qs": "^6.5.2",
    "supertest": "^3.3.0"
  },
  "devDependencies": {
    "eslint": "^5.9.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jest": "^22.1.2",
    "jest": "^23.6.0",
    "jest-circus": "^23.6.0",
    "jest-environment-node": "^23.4.0",
    "mongodb": "^3.1.10",
    "mongodb-memory-server": "^2.7.4"
  },
  "jest": {
    "setupFiles": ["<rootDir>/test/bootstrap.js"],
    "testEnvironment": "<rootDir>/test/mongo-environment.js",
    "verbose": true,
    "collectCoverage": true,
    "testRunner": "jest-circus/runner",
    "collectCoverageFrom": [
      "**/*.js",
      "!**/node_modules/**",
      "!**/vendor/**"
    ],
    "coveragePathIgnorePatterns": [
      "<rootDir>/bin/",
      "<rootDir>/test/"
    ],
    "coverageReporters": [
      "html"
    ]
  }
}
